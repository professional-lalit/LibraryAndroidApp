<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_size_5">

    <ImageView
        android:id="@+id/img_book"
        android:layout_width="@dimen/dimen_size_100"
        android:layout_height="@dimen/dimen_size_100"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_book" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_book"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_book_title"
            style="@style/TextStyle"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_book_categories"
            style="@style/TextStyle"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="XXXXXXXXXXX"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/txt_book_description"
            style="@style/TextStyle"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>


</RelativeLayout>